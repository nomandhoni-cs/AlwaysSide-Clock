{
  "name": "always-side-clock",
  "displayName": "AlwaysSide Clock",
  "version": "1.0.0",
  "description": "Suggests a clock and tools that stay visible on the side panel.",
  "author": "Noman Dhoni <alnoman.dhoni@gmail.com>",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package"
  },
  "dependencies": {
    "plasmo": "0.89.2",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.47",
    "prettier": "3.2.4",
    "tailwindcss": "^3.4.13",
    "typescript": "5.3.3"
  },
  "manifest": {
    "permissions": [
      "sidePanel", "storage"
    ],
    "side_panel": {
      "default_path": "tabs/sidepanel.html"
    },
    "host_permissions": [
      "https://*/*"
    ]
  }
}
